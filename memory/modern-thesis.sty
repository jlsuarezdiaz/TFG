% Chooses the footer style
\renewcommand\footrule{
  \if@mainmatter
    \begin{minipage}{\textwidth}
      \hrule width \hsize
    \end{minipage}\par
  \fi
}

% Left part of the footer
\fancyfoot[L]{}
% Center part of the footer
\fancyfoot[C]{
  \if@mainmatter
    %
  \else
    \thepage%
  \fi
}
% Right part of the footer
\fancyfoot[R]{
\if@mainmatter
  \pageWord\ \thepage\ \ofWord\ \protect\pageref{LastPage}%
\fi
}

